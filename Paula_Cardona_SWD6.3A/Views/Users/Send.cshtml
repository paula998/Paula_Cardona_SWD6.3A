@model Common.UserData

@{
    ViewData["Title"] = "Send";
}

<h1>Send</h1>

<h4>UserData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Send">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
