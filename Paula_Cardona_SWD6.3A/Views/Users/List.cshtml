@model IEnumerable<Common.UserData>
@inject DataAccess.CacheDataAccess _cache;
@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AttachmentUri)
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @if (string.IsNullOrEmpty(item.AttachmentUri) == false)
                {
                    <a href="@item.AttachmentUri">Download</a>}
            </td>
            <td>
                @if (string.IsNullOrEmpty(item.AttachmentUri) == false)
                {
                    <a href="SendDOCToPDF">Convert to PDF</a>}
            </td>

        </tr>
        }

    </tbody>
</table>


